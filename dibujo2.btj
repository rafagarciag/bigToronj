function void recursion(int torta){
	push();
	if(torta<=1){
		tetragon(1,1,0);
	}
	else{
		tetragon(torta,torta,0);
		push();
		trans(-1*(torta/2),-1*(torta/2));
		push();
		recursion(torta/2)
		pop();
		pop();
		push();
		trans(torta/2,-1*(torta/2));
		recursion(torta/2)
		pop();
	}
	pop();
}



drawing (500,500,#CAFEFE){
	trans(_WIDTH/2,_HEIGHT/2);
	push();
	recursion(100)

}
